	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"packages": {},
				"exec": [
					"const apiKey = pm.environment.get(\"apiKey\");",
					"const apiSecretB64 = pm.environment.get(\"apiSecret\"); // BASE64 string",
					"",
					"if (!apiKey || !apiSecretB64) {",
					"  throw new Error(\"Missing api-key or api-secret in Environment/Globals.\");",
					"}",
					"",
					"// Decode secret (base64 â†’ WordArray)",
					"const apiSecret = CryptoJS.enc.Base64.parse(apiSecretB64);",
					"",
					"// Stamp = ms timestamp",
					"const stamp = Date.now().toString();",
					"",
					"// Data = apiKey + stamp (UTF-8)",
					"const data = CryptoJS.enc.Utf8.parse(apiKey + stamp);",
					"",
					"// HMAC-SHA256",
					"const hmac = CryptoJS.HmacSHA256(data, apiSecret);",
					"",
					"// Base64 encode result",
					"const signature = CryptoJS.enc.Base64.stringify(hmac);",
					"",
					"// Upsert headers",
					"pm.request.headers.upsert({ key: \"X-PCK\", value: apiKey });",
					"pm.request.headers.upsert({ key: \"X-Stamp\", value: stamp });",
					"pm.request.headers.upsert({ key: \"X-Signature\", value: signature });",
					"pm.request.headers.upsert({ key: \"Content-Type\", value: \"application/json\" });",
					"",
					"// console.log({ stamp, signature });"
				]
			}
		},
